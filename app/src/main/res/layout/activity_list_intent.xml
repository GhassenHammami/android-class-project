<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg"
    android:orientation="vertical">

    <TextView
        android:id="@+id/listIntentHeader"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#6750A3"
        android:gravity="center_vertical"
        android:paddingVertical="13dp"
        android:paddingStart="16dp"
        android:text="TP 7: Intents"
        android:textColor="@color/white"
        android:textSize="22sp"
        android:textStyle="bold" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="12dp"
        android:gravity="center_vertical"
        android:orientation="vertical"
        android:padding="16dp">

        <TextView
            android:id="@+id/listIntentTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:paddingBottom="20dp"
            android:text="ActivitÃ© Principale"
            android:textSize="22sp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/listIntentBtnSimpleExplicit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="12dp"
            android:padding="10dp"
            android:text="INTENT SIMPLE EXPLICITE"
            android:textSize="16sp" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/listIntentBtnCalculator"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="16dp"
            android:text="CALCULATRICE"
            android:textSize="16sp"
            app:icon="@drawable/calculatrice"
            app:iconGravity="textStart"
            app:iconSize="32dp"
            app:iconTint="@color/white" />


        <Button
            android:id="@+id/listIntentBtnIntentImplicit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="12dp"
            android:text="INTENT IMPLICITE"
            android:textSize="16sp" />

        <Button
            android:id="@+id/listIntentBtnClose"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="FERMER"
            android:textSize="16sp" />
    </LinearLayout>
</LinearLayout>
