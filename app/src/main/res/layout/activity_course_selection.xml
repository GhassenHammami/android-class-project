<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg"
    tools:context=".CourseSelectionActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="24dp">

        <TextView
            android:id="@+id/textView13"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Choix du parcours"
            android:textAlignment="center"
            android:textSize="34sp"
            android:textStyle="bold" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:text="Nom et Prénom :"
            android:textSize="16sp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/courseSelectionNameEdit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="12dp"
            android:hint="Entrez votre nom et prénom"
            android:inputType="textPersonName" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Numéro de téléphone :"
            android:textSize="16sp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/courseSelectPhoneEdit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="12dp"
            android:hint="Entrez votre numéro de téléphone"
            android:inputType="phone" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Parcours demandé :"
            android:textSize="16sp"
            android:textStyle="bold" />

        <RadioGroup
            android:id="@+id/courseSelectRadioGroup"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="12dp"
            android:orientation="vertical">

            <RadioButton
                android:id="@+id/courseSelectGLRadio"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="GL" />

            <RadioButton
                android:id="@+id/courseSelectIARadio"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="0dp"
                android:text="IA" />

            <RadioButton
                android:id="@+id/courseSelectIOTRadio"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="IOT" />

            <RadioButton
                android:id="@+id/courseSelectDSRadio"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="DS" />
        </RadioGroup>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Options :"
            android:textSize="16sp"
            android:textStyle="bold" />

        <CheckBox
            android:id="@+id/courseSelectClub1Checkbox"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Rejoindre le club 1" />

        <CheckBox
            android:id="@+id/courseSelectClub2Checkbox"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Rejoindre le club 2" />

        <CheckBox
            android:id="@+id/courseSelectClub3Checkbox"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:text="Rejoindre le club 3" />

        <Button
            android:id="@+id/courseSelectValidateBtn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="72dp"
            android:padding="10dp"
            android:text="Valider"
            android:textColor="@android:color/white" />

    </LinearLayout>
</ScrollView>